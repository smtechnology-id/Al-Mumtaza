@page
@{
      string _overrideDataString = JsonSerializer.Serialize(new {attributes = new { placement = "vertical" }});   
    Dictionary<string, string> HtmlTagData = new Dictionary<string, string>(){
      {"override",_overrideDataString}
    };
    ViewBag.HtmlTagData = HtmlTagData;

    List<string> PageStyles = new List<string>(){};
    ViewBag.PageStyles = PageStyles;

    List<string> VendorScripts = new List<string>(){};
    ViewBag.VendorScripts = VendorScripts;

    List<string> PageScripts = new List<string>(){};
    ViewBag.PageScripts = PageScripts;

    Dictionary<string, string> Breadcrumbs = new Dictionary<string, string>(){
        {"/Index","Home"},
        {"/Interface/Index","Interface"},
        {"/Interface/Content/Index","Content"},
        {"/Interface/Content/Menu/Index","Menu"}
    };
    ViewBag.Breadcrumbs = Breadcrumbs; 

    ViewBag.Title = "Vertical No Hidden Menu"; 
    ViewBag.Description = "A vertical menu that never gets into semi-hidden state and switches to mobile view directly after desktop view.";

    @* For custom _LayoutNav data attributes *@
    Dictionary<string, string> CustomNavData = new Dictionary<string, string>(){
      {"vertical-unpinned","1200"},
      {"vertical-mobile","1200"},
      {"disable-pinning","true"}
    };
    ViewBag.CustomNavData = CustomNavData;
}
<div class="container">
  <!-- Title and Top Buttons Start -->
  <div class="page-title-container">
    <div class="row">
      <!-- Title Start -->
      <div class="col-12 col-md-7">
        <h1 class="mb-0 pb-0 display-4" id="title">@ViewBag.Title</h1>
        <partial name="_Layout.Breadcrumb"/>
      </div>
      <!-- Title End -->
    </div>
  </div>
  <!-- Title and Top Buttons End -->

  <!-- Content Start -->
  <div class="card mb-2">
    <div class="card-body h-100">@ViewBag.Description</div>
  </div>
  <!-- Content End -->
</div>