@{
    if (ViewBag.Breadcrumbs != null)
    {
        <nav class="breadcrumb-container d-inline-block" aria-label="breadcrumb">
            <ul class="breadcrumb pt-0">
                @foreach (KeyValuePair<string, string> item in ViewBag.Breadcrumbs)
                {
                    <li class="breadcrumb-item"><a asp-page="@item.Key">@item.Value</a></li>
                }
            </ul>
        </nav>
    }
}